<h2>All Your Students</h2>

<%= link_to "Add a New Student", new_student_path %>

<% @students.each do |student| %>
  <p>
    <%= link_to student.name, student_path(student) %>
    </p>
  <p><%= student.date_of_birth.to_s(:long) %></p>
  <p><%= student.address %></p>
  <p><%= student.phone_number %></p>
  <p><%= student.email_address %></p>
<% end %>
