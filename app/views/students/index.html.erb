<h2>All Your Students</h2>

<%= link_to "Add a New Student", new_student_path %>

<% @students.each do |student| %>
  <p>
    <strong>Student Name:</strong> <%= student.name %>
    <!-- <%#= link_to "View Contact Log", student_log_path(student) %> -->
    <%= link_to "Edit Student", edit_student_path(student) %>
    <%= link_to "Delete Student", student_path(student), method: :delete %>
  </p>

  <strong>DOB:</strong>
    <%= student.date_of_birth.to_s(:long) %>
  <p>
    <strong>Address:</strong>
    <%= student.address %>
  </p>
  <p>
    <strong>Phone Number:</strong>
    <%= student.phone_number %>
  </p>
  <p>
    <strong>Email Address:</strong>
    <%= student.email_address %>
  </p>

<% end %>
